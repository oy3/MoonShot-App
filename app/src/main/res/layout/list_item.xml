<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/btsign"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:id="@+id/dImg" android:layout_marginTop="8dp"/>
    <TextView
            tools:text="Device Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/dName"
            app:layout_constraintStart_toEndOf="@+id/dImg" android:layout_marginStart="32dp"
            android:textSize="24sp" app:layout_constraintTop_toTopOf="@+id/dImg"
            app:layout_constraintBottom_toBottomOf="@+id/dImg"
            android:paddingEnd="20dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="@android:color/black"/>
    <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="-16dp" app:layout_constraintTop_toBottomOf="@+id/dImg"
            android:layout_marginTop="16dp"
    />
</android.support.constraint.ConstraintLayout>